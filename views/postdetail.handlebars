
{{!-- card input --}}
<div class="card" style="width: 18rem;">
  <ul class="list-group list-group-flush">
    <li class="list-group-item">{{postData.title}}</li>
    <li class="list-group-item">{{postData.description}}</li>
    <li class="list-group-item">{{postData.user.username}}</li>
    <li class="list-group-item">{{postData.date}}</li>
  </ul>
</div>

{{!-- comment form --}}
<form>
  <div class="form-group">
  <div class="form-group">Comment</label>
    <input type="text" class="form-control" id="exampleInputText">
  </div>
  <button type="submit" class="btn btn-primary" id="submit">Submit</button>
</form>

{{!-- posted comments --}}

<div class="card" style="width: 18rem;">
  <ul class="list-group list-group-flush">
    {{#each commentData}}
    <li class="list-group-item">{{this.description}}</li>
    {{/each}}
  </ul>
</div>

<script src="/js/comment.js"></script>